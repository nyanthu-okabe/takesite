{
  "manifest_version": 3,
  "name": "Takepon Extension",
  "version": "1.0.0",
  "description": "Edge用拡張機能の最小構成やで",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
